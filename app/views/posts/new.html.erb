<div class="posts-container">
  <div class="new-post">
    <h3>Create new post</h3>

    <%= form_for @post do |f| %>
      <%= f.label :title, :class => 'title'%><br>
      <%= f.text_area :title, :class => 'title' %>
      <br><br>
      <%= f.label :content, :class => 'content' %><br>
      <%= f.text_area :content, :class => 'content' %>
      <br><br>
      <%= f.submit 'Create Post', :class => 'submit' %>
    <% end %>

    <p>
    <%= link_to "Back to posts", posts_path %>
    </p>

  </div>
</div>
