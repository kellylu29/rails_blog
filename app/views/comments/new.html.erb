<div class="new-comment">
  <h1>Comment</h1>

    <% if current_user %>

      <%= form_for @comment do |f| %>
        <%= f.hidden_field :post_id, value: params[:post_id] %>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.label :content %>
        <%= f.text_area :content %>
        <br><br>

        <%= f.submit %>
      <% end %>

    <% end %>

  <p>
  <%= link_to "Back to posts", posts_path %>
  </p>

</div>
